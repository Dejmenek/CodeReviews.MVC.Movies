@model MVC.TVShows.Forser.Models.TVShow

@{
    ViewData["Title"] = "Details of TV Show";
}

<h1>Details of TV Show</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ShowStarted)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShowStarted)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ShowCompleted)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShowCompleted)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumberOfEpisodes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumberOfEpisodes)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumberOfSeasons)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumberOfSeasons)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BeenWatched)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BeenWatched)
        </dd>
        <dt class="col-sm-2">
            Genres
        </dt>
        <dd class="col-sm-10">
            @if (Model.TVShow_Genres != null)
            {
                @foreach (var genre in Model.TVShow_Genres)
                {
                    <p>@genre.Genre.ShowGenre</p>
                }
            }
        </dd>
        <dt class="col-sm-2">
            TV Show Certification Rating
        </dt>
        <dd class="col-sm-10">
            @if (Model.TVShow_Rating != null)
            {
                    <p>@Model.TVShow_Rating.Rating.Certification</p>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>