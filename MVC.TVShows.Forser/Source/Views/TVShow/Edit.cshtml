@model MVC.TVShows.Forser.Models.TVShow

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>TVShow</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShowStarted" class="control-label"></label>
                <input asp-for="ShowStarted" class="form-control" />
                <span asp-validation-for="ShowStarted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShowCompleted" class="control-label"></label>
                <input asp-for="ShowCompleted" class="form-control" />
                <span asp-validation-for="ShowCompleted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfEpisodes" class="control-label"></label>
                <input asp-for="NumberOfEpisodes" class="form-control" />
                <span asp-validation-for="NumberOfEpisodes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfSeasons" class="control-label"></label>
                <input asp-for="NumberOfSeasons" class="form-control" />
                <span asp-validation-for="NumberOfSeasons" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="BeenWatched" /> @Html.DisplayNameFor(model => model.BeenWatched)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
