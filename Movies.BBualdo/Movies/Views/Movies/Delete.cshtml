@model Data.Models.Movie

<form method="post" asp-action="Delete" class="p-10 flex flex-col gap-10 items-center">
    <h2 class="text-2xl text-white font-bold">Are you sure you want to delete "@Model.Title"?</h2>
    <div class="flex gap-6 items-center">
        <a type="button" asp-action="Index" class="font-bold px-4 py-2 bg-white text-black hover:bg-black hover:text-white transition-all duration-200 cursor-pointer rounded-2xl">Cancel</a>
        <input type="submit" value="Delete" asp-route-id="@Model.Id" class="font-bold px-4 py-2 bg-red-600 text-white hover:bg-red-400 transition-all duration-200 cursor-pointer rounded-2xl" />
    </div>
</form>