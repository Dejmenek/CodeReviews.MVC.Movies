@model MVC.Movies.K_MYR.Models.MovieListViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="container text-white">
    <div class="d-flex justify-content-between mb-2">
        <h1 class="red">Movies</h1>
        <button class="addButton bg-dark my-2" type="button" data-bs-toggle="modal" data-bs-target="#addMovie">
            Add New
        </button>
    </div>  
    <div class="d-flex mb-3">
        <img class="me-3 search-icon" src="/img/search.svg" alt=""/>
        <input class="form-control w-100 my-2" id="movies-search" type="text"/>
    </div>     
    <div id="filter-accordion" class="accordion-flush mb-4">
        <div class="accordion-item bg-dark text-white">
            <h2 id="filterHeader" class="accordion-header bg-dark text-white">
                <button class="accordion-button bg-dark text-white collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFilters" aria-expanded="false" aria-controls="collapseFilters">
                    <strong>Filters</strong>
                </button>
            </h2>
            <div id="collapseFilters" class="accordion-collapse collapse" aria-labelledby="filterHeader" data-bs-parent="#filterAccordion">
                <div class="accordion-body red">
                    <form asp-controller="Movies" asp-action="Index" method="get">
                        <p>

                            <select asp-for="MovieGenre" asp-items="Model.Genres">
                                <option value="">All</option>
                            </select>

                            Title: <input id="movies-search" type="text" asp-for="SearchString" />
                            <input type="submit" value="Filter" />
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <table class="table text-white table-hover table-borderless w-100 px-2" id="movies-table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NewMovie.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NewMovie.ReleaseDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NewMovie.Genre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NewMovie.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NewMovie.Rating)
                </th>                
                <th class="px-0"></th>
                <th class="px-0"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Movies)
            {
                <tr data-movie-id="@item.Id">
                    <td class="text-truncate">
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td class="text-truncate">
                        @Html.DisplayFor(modelItem => item.ReleaseDate)
                    </td>
                    <td class="text-truncate">
                        @Html.DisplayFor(modelItem => item.Genre)
                    </td>
                    <td class="text-truncate">
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td class="text-truncate">
                        @Html.DisplayFor(modelItem => item.Rating)
                    </td>
                    <td class="px-1">
                        <button type="button" class="table-btn transparent-btn px-0" onclick="openUpdateMovieModal(
                            '@item.Id', '@item.Title', '@item.ReleaseDate.ToString("yyyy-MM-dd")', '@item.Genre', '@item.Price', '@item.Rating')">
                            <img class="updateIcon" src="/img/pencil_white.svg"/>
                        </button>
                    </td>
                    <td class="px-1">
                        <button type="button" class="table-btn transparent-btn px-0" onclick="openDeleteMovieModal(
                            '@item.Id', '@item.Title')">
                            <img class="deleteIcon" src="/img/trash_white.svg"/>
                        </button>
                    </td>                   
                </tr>
            }
        </tbody>
    </table>
</div>

@await Html.PartialAsync("_Modals", new Movie())

@section Scripts {
    <script src="~/js/MoviesIndex.js"></script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}