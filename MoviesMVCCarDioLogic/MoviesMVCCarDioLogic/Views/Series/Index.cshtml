@model MoviesMVCCarDioLogic.Models.SerieGenreViewModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="title">Series page</h1>

<p>
    <a class="btnR" asp-action="Create">Create New</a>
</p>

<form asp-controller="Series" asp-action="Index" method="get">
    <p style="color:white">
        <select asp-for="SerieGenre" asp-items="Model.Genres">
            <option value="">All</option>
        </select>
        
        Title: <input type="text" asp-for="SearchString"/>
        <input type="submit" value="Filter"/>
    </p>
</form>

<table style="color:white" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Series[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Series[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Series[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Series[0].NumberOfEpisodes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Series[0].NumberOfSeasons)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Series[0].StreamingPlatform)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Series[0].Rating)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.Series)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfEpisodes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfSeasons)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StreamingPlatform)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    <a class="btnR" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btnR" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btnR" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>