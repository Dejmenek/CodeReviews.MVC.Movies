@model AlbumGenreViewModel
@{
    ViewData["Title"] = "Albums";
    Layout = "_Layout";
}

<h1>Albums</h1>

<p>
    <a asp-action="Add">Add new</a>
</p>
<form asp-controller="Albums" asp-action="Index" method="get">
    <p>
        <select asp-for="AlbumGenre" asp-items="Model.Genres">
            <option value="">All</option>
        </select>
        Title: <input type="text" asp-for="SearchString"/>
        <input type="submit" value="Filter"/>
    </p>
</form>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Albums![0].CoverPath)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Albums![0].Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Albums![0].Artist)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Albums![0].ReleaseDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Albums![0].Genre)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Albums!)
    {
        <tr>
            <td>
                <img src="@Url.Content(item.CoverPath)" class="img-thumbnail img-thumbnail" alt="Cover of album"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artist)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<div>
    <a asp-controller="Home" asp-action="Index">Back to homepage</a>
</div>